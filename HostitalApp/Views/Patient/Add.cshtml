@{
    ViewData["Title"] = "Add Appointment";
}

@model Appointment

<h1>Add Appointment</h1>

<form asp-action="Add" method="post">

    <div class="mt-3">
        <label class="form-label">Doctor ID</label>
        <input type="text" asp-for="DoctorId" />
    </div>

    <div class="mt-3">
        <label class="form-label">Description</label>
        <input type="text" asp-for="Description" />
    </div>

    <div class="mt-3">
        <label asp-for="Day">Day</label>
        <input type="text" type="datetime-local" asp-for="Day" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <a class="btn btn-primary" asp-controller="Patient" asp-action="Index">Return to main page</a>
    </div>

</form>