@{
    ViewData["Title"] = "Edit Appointment";
}

@model Appointment

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div>
        <label asp-for="Description">Description</label>
        <input asp-for="Description" />
    </div>

    <div>
        <label asp-for="Day">Date and time</label>
        <input asp-for="Day" type="datetime-local" />
    </div>

    <div>
        <label asp-for="DoctorId">Choose Doctor</label>
        <input asp-for="DoctorId" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Doctor">Delete</button>
        <a class="btn btn-primary" asp-controller="Doctor" asp-action="List">Return to list page</a>
        <a class="btn btn-primary" asp-controller="Doctor" asp-action="Index">Return to main page</a>
    </div>
</form>


