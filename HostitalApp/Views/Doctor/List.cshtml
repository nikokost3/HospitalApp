@model List<Appointment>

@{
    ViewData["Title"] = "Appointment List";
}

<h1>Appointment List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Desription</th>
            <th>Day</th>
            <th>Doctor</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.Id</td>
                <td>@appointment.Description</td>
                <td>@appointment.Day</td>
                <td>@appointment.DoctorId</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Doctor" asp-action="Edit" asp-route-id="@appointment.Id">Edit</a>
                </td>                
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" asp-controller="Doctor" asp-action="Index">Return to main page</a>
